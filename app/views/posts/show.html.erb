<p>
  <strong>Post:</strong>
  <%= @post.description %>
  <%= link_to 'edit', edit_post_path(@post) %>
  <%= link_to 'back', :back %>

</p>


<h2>Add a comment:</h2>
<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
 
